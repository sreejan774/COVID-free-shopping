<%- include('partials/header') %>


<div class="container mt-5">
  <h1>Exit</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <form action="/exit" method="post">
            <div class="form-group">
              <input type="email" name="username" class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group">
              <input type="number" name="token" class="form-control" placeholder="Token" required>
            </div>
            <div class="form-group">
              <input type="number" name="otp" class="form-control" placeholder="OTP" required>
            </div>
            <button class="btn btn-lg btn-dark" type="submit" name="button">Exit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>



<%- include('partials/footer') %>
